{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/app/*": ["./app/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "corpshield",
    "gemini-cli",
    "n8n",
    "ComfyUI",
    "ComfyUI-Manager",
    "browser-extension",
    "chatbot-backend",
    "backend-api-node",
    "frontend-react",
    "services-llm-python",
    "privacy-audit-app",
    "SchemaPro",
    "deploy",
    "database",
    "docs",
    "examples",
    "packages/SHCEMA-Injector"
  ]
}
