{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "@pienhankinta-vahti-supabase-url",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@pienhankinta-vahti-supabase-anon-key",
    "SUPABASE_SERVICE_ROLE_KEY": "@pienhankinta-vahti-service-role-key",
    "GROQ_API_KEY": "@pienhankinta-vahti-groq-api-key"
  },
  "regions": ["hel1"],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
